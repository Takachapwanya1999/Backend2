{
  "name": "airbnb-clone-fullstack",
  "version": "1.0.0",
  "description": "Full-stack Airbnb clone for Zaio Bootcamp Capstone",
  "main": "server.js",
  "type": "module",
  "scripts": {
  "postinstall": "cd server && npm ci",
  "start": "node server.js",
  "start:prod": "NODE_ENV=production node server.js",
  "dev": "concurrently \"npm run server\" \"npm run client\"",
  "server": "cd server && npm run dev",
  "client": "cd client && npm run dev",
  "build": "npm run build:server && npm run build:client",
  "build:server": "cd server && npm ci",
  "build:client": "cd client && npm ci --include=dev && npm run build",
  "render-postbuild": "npm run build:server && npm run build:client"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
  "url": "https://github.com/Takachapwanya1999/Airbnb"
  },
  "author": "Zaio Bootcamp Student",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.0.1",
    "dotenv": "^17.2.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "sharp": "^0.34.3"
  }
}
